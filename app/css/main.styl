@import variables
@import photoStripe
@import navbar

body
  font-size: 18px
  line-height: 140%
  font-family: font-family-sans;
  background: #eee
  -webkit-font-smoothing: antialiased !important
  -moz-osx-font-smoothing: grayscale !important
  .navbar
    background: om-dark-blue
    position: fixed
    top: 0
    z-index: 100
    width: 100%


.content
  margin-top: 15px
  padding: 15px
  background-color: white

[role="page-container"]
  padding-top: 50px
  @media (max-width: 767px)
    background: #eee

[data-page='home']
  .social
    position: absolute
  .logo
    .white
      display: block
    .black
      display: none
  [role="page-container"]
    padding-top: 0px

.logo
  position: absolute
  top: 60%
  img
    height: 5em

.om-logo
  img
    position: absolute
    height: 2em !important
    top: 50%
    transform: translateY(-50%)
@media (max-width: 991px)
  .om-logo
    img
    top: 10%
    transform: translateY(-5%)
