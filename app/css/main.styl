@import variables
@import photoStripe
@import navbar

body
  font-size: 18px
  line-height: 140%
  font-family: font-family-sans;
  background: om-butter
  -webkit-font-smoothing: antialiased !important
  -moz-osx-font-smoothing: grayscale !important

.content
  margin-top: 15px
  padding: 15px
  background-color: white

[role="page-container"]
  padding-top: 50px
  overflow: hidden
  @media (max-width: 767px)
    background: om-butter

.home-page
  .social
    position: absolute
  [role="page-container"]
    padding-top: 0px

#photo-container
  .photo-preview
    position: relative
    display: block
    float: left
    width: 260px
    margin-bottom: 5px
    img
      width: 100%
      height: 100%
    .overlay
      width: 100%
      height: 100%
      background-color: rgba(0,0,0,0.3)
      position: absolute
      top: 0
      left: 0
      text-decoration: none
      color: #fff
      display: none
      .photo-info
        position: absolute
        bottom: 0
        left: 0
        background-color: rgba(0,0,0,0.80)
        width: 100%
        margin: 0
    &:hover .overlay
      display: block
